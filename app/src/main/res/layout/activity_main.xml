<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.aymen.mygooglepluslogintest.MainActivity">

    <TextView
        android:id="@+id/tv_username"
        android:textColor="#252424"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#f9acac"
        android:textSize="30dp" />



    <com.google.android.gms.common.SignInButton
        android:layout_centerInParent="true"
        android:id="@+id/sign_in_button"
        android:layout_width="120dp"
        android:layout_height="wrap_content" />


    <Button
        android:id="@+id/btn_logout"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:text="Sign out"
        android:layout_marginBottom="50dp"
        android:layout_width="120dp"
        android:layout_height="50dp" />

    <TextView
        android:id="@+id/personname"
        android:textColor="#252424"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#f9acac"
        android:textSize="30dp"
        android:layout_below="@+id/tv_username"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/personemail"
        android:textColor="#252424"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#f9acac"
        android:textSize="30dp"
        android:layout_below="@+id/personname"
        android:layout_alignRight="@+id/personname"
        android:layout_alignEnd="@+id/personname" />

    <TextView
        android:id="@+id/personid"
        android:textColor="#252424"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#f9acac"
        android:textSize="30dp"
        android:layout_below="@+id/personemail"
        android:layout_alignRight="@+id/personemail"
        android:layout_alignEnd="@+id/personemail" />


    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/imageView"
        android:layout_width="180dp"
        android:layout_height="180dp"
        app:civ_border_color="#ffffff"
        app:civ_border_width="2dp" />


</RelativeLayout>
